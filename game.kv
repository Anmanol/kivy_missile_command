#:kivy 1.0.9
#just testing pull requests
<Game>:
    canvas:
        Rectangle:
            source: './images/background.png'
            pos: self.pos
            size: self.size

    Label:
        font_size: 30
        center_x: root.width - 140
        top: root.top

    Image:
        id: base
        source: './images/base.gif'
        center_x: root.center_x

    Image:
        id: house
        source: './images/house_1.gif'
        center_x: root.width - root.width/10

    Image:
        id: kremlin
        source: './images/kremlin_1.gif'
        center_x: root.width - 3*root.width/10

    Image:
        id: nuclear
        source: './images/nuclear_1.gif'
        center_x: root.center_x - 2*root.width/10

    Image:
        id: skyscraper
        source: './images/skyscraper_1.gif'
        center_x: root.width/10
